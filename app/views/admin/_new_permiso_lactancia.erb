<script type="text/javascript">
$j( document ).ready(function() {
    $j('#lactancia_fecha_inicio').datepicker({
      timeFormat: 'h:m',
      showMonthAfterYear: false,
      numberOfMonths: 2,
      showOn: 'both',
      buttonImage: '/images/iconos/calendar_mini.png',
      buttonImageOnly: false
});

$j('#lactancia_fecha_fin').datepicker({
      timeFormat: 'h:m',
      showMonthAfterYear: false,
      numberOfMonths: 2,
      showOn: 'both',
      buttonImage: '/images/iconos/calendar_mini.png',
      buttonImageOnly: false
});

});
