<div class="titulocalendario">
  Detalle de movimiento
</div>

<br />
<!-- contenido -->
<div id="divlista">
    <table width="70%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
    <tr class="d0">
       <td style="vertical-align: middle;"><b>Nombre del trabajador</b></td>
       <td style="vertical-align: middle;"><%=h (@movimiento.user_id) ? User.find(@movimiento.user_id).nombre_completo : "---"%></td>
    </tr>
    
    <tr class="d1">
      <td style="vertical-align: middle;"><b>Registrado por:</b></td>
      <td style="vertical-align: middle;"><%=h (@movimiento.autorizo) ? User.find(@movimiento.autorizo).nombre_completo : "---"%></td>
    </tr>

     <tr class="d0">
      <td style="vertical-align: middle;"><b>Fecha/hora de inicio:</b></td>
      <td style="vertical-align: middle;"><%=h (@movimiento.fecha_inicio) ? @movimiento.fecha_inicio.strftime("%d de %B de %Y / %H:%M") : "---"%></td>
    </tr>

    <tr class="d1">
      <td style="vertical-align: middle;"><b>Fecha/hora fin:</b></td>
      <td style="vertical-align: middle;"><%=h (@movimiento.fecha_fin) ? @movimiento.fecha_fin.strftime("%d de %B de %Y / %H:%M") : "---"%></td>
    </tr>
 </table><br /><br />

   <!-- detalle de las observaciones -->
    <table width="70%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:gray; color:white">
       <th colspan="2">
           Observaciones
       </th>
     </tr>

      <tr class="d0">
        <th colspan="2"><%=text_area(:movimiento, :observaciones, :size => "100x10", :disabled => 'disabled')%></th>
      </tr>
     </table>


</div>

