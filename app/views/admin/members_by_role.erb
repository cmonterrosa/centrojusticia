<h3><%=link_to 'Roles', {:action => "show_roles"}, :class => 'boton'%>  >>  <%=link_to "#{@role.descripcion}", {:action => "members_by_role", :id => @role}, :class => 'boton'%></h3>


<div id="scroll">
      <table class="sample" width="70%" border="0" cellspacing="2" cellpadding="0" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
                <tr align="center" class="d0">
                  <td width="30%" bgcolor="#E8E8E8">USUARIO</td>
                  <td width="50%" bgcolor="#E8E8E8">NOMBRE COMPLETO</td>
                  <td width="20%" bgcolor="#E8E8E8" colspan="3">ACCIÓN</td>
                </tr>
            <!-- Registros -->
            <% for usuario in @role.users %>
               <tr align="center" class="d1">
                  <td  bgcolor="#f3f3f3">
                      <%=usuario.login%>
                  </td>
                  <td  bgcolor="#f3f3f3">
                     <%=usuario.nombre_completo%>
                  </td>
                  <td  bgcolor="#f3f3f3">
                      <%= button_to 'Quitar', { :action => 'delete_user', :controller => "admin", :id => usuario, :role => @role}, :confirm => '¿Esta seguro?', :method => :post %>
                  </td>
                </tr>
              <%end%>
       </table>
</div><br /><br /><br />


<div id="scroll">
<% form_tag :action => 'add_user', :role =>@role do -%>
<table class="sample" width="50%" border="0" cellspacing="2" cellpadding="0" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
          <th colspan="2">
              Agregar Usuario
          </th>
      </tr>

      <tr class="d1">
          <th><%= collection_select("user", "user_id", @users, :id, :nombre_completo, :prompt => '>> Seleccione usuario')    %></th>
          <th class="boton"><%= submit_tag "Agregar", :onclick => "return comprobar();" %></th>
      </tr>
</table>
<% end %>
</div>


