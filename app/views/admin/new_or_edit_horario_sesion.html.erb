<% form_for :horario, @horario, :url => { :action => "save_horario_sesion", :id => @horario.id } do |f| -%>
  <table width="90%" border="0" align="center" cellpadding="2" cellspacing="1">
    <tr bgcolor="#CCCCCC" class="titulo">
      <td colspan="3" align="center" >EDITAR HORARIO DE SESION</td>
    </tr>
    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4">DATOS</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Hora</td>
          <td align="center">Minutos</td>
          <td align="center">Sala</td>
          <td align="center">¿Activo?</td>
        </tr>
        <tr>
          <td align="center"><%= f.text_field :hora, :required => true%></td>
          <td align="center"><%= f.text_field :minutos,  :required => true%></td>
          <td align="center"> <%= f.select :sala_id, Sala.all.collect{|a| [a.descripcion, a.id]}, :prompt => 'Seleccione una opción'%></td>
           <td align="center"><%=f.check_box :activo%></td>
        </tr>
      </table></td>
    </tr>
    <!-- espacio -->
    <tr>
      <td colspan="3"><hr /></td>
    </tr>
    <!-- FOOTER -->
    <tr>
      <td align="right">
        <table>
          <tr>
            <td>
              <input title="guardar y regresar" alt=" Guardar y regresar a la sección anterior " type="image"  src="/images/botones/btn_guardar.png" width="150" height="40" style="margin-left:90px;"/>
            </td>
            <td>
              <%= link_to image_tag("botones/btn_regresar.png", :width => 170, :height=>"40", :border =>0, :style => "margin-left:90px;" ) ,  :controller => "admin"-%>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>




