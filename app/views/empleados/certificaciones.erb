<script type="text/javascript">
		$j(document).ready(function() {
			/*
			 *  Simple image gallery. Uses default settings
			 */

			$j('.fancybox').fancybox();
               });
</script>

<p>
   <%= link_to image_tag("kolaval/ico-actualizar.jpg", :border =>0) , {:action => "show", :id => @empleado}, :title => "Recargar"%>
</p>

<div class="titulocalendario">
  <p>Certificaciones</p>
</div>

<table width="80%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:gray; color:white">
      <th colspan="3">
        Datos de empleado
      </th>
     </tr>

      <tr class="d0">
       <td style="vertical-align: middle;" colspan="3"> <%=h(@empleado ? @empleado.institucion : "No existe información")%></td>
      </tr>


     <tr class="d1">
       <td style="vertical-align: middle;" align="left"><b>Nombre completo:</b></td>
       <td style="vertical-align: middle;"> <%=h(@empleado ? @empleado.nombre_completo : "No existe información")%></td>
     </tr>

   
     <tr class="d0">
       <td style="vertical-align: middle;" align="left"><b>Adscripción:</b></td>
       <td style="vertical-align: middle;"> <%=h(@empleado.subdireccion ? @empleado.subdireccion.descripcion : "No existe información")%></td>
    </tr>

    
    <tr class="d0">
       <td style="vertical-align: middle;" align="left"><b>Categoria:</b></td>
       <td style="vertical-align: middle;"> <%=h(@empleado ? @empleado.categoria : "No existe información")%></td>
    </tr>

   
</table><br />

<table width="80%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:gray; color:white">
      <th colspan="4">
        Certificaciones
      </th>
     </tr>

     <%unless @certificaciones.empty?%>
     <tr class="d1">
        <th style="vertical-align: middle;" width="10%">&nbsp;</th>
        <th style="vertical-align: middle;" width="20%">&nbsp;</th>
        <th style="vertical-align: middle;" width="50%"><b>Categoria:</b></th>
        <th style="vertical-align: middle;" width="20%"><b>Fecha de impresion</b></th>
      </tr>
      <%end%>

      <%clase=0%>
     <%@certificaciones.each do |c|%>

        <tr class="d<%=h clase%>">
                <!-- Si tiene archivo adjunto -->
               <td align="center" width="10%"><%= link_to image_tag("kolaval/ico-print.jpg", :border =>0) , { :action => "print_certificacion", :controller => "empleados", :id => c }, :title => "Imprimir certificacion"%></td>
                <td align="left" width="20%"><%=h link_to "Editar", :action => "new_or_edit_certificacion", :certificacion => c%></td>
                <td align="left" width="50%"><%=h (c.categoria) ? c.categoria: ""%></td>
               <td align="left" width="20%"><%=h (c.created_at) ? c.created_at.strftime('%d de %B de %Y / %H:%M %p'): ""%></td>
         </tr>
        <%clase=invert_class(clase)%>
      <%end%>


         <tr>
           <td colspan="3" align="center"><%= link_to 'Nueva Certificacion', {:action => "new_or_edit_certificacion", :id => @empleado}, :class => "boton" %></td>
         </tr>

</table><br />



<%= link_to 'Editar', edit_empleado_path(@empleado), :class => "boton" %> |
<%= link_to 'Atras', empleados_path, :class => "boton" %>
