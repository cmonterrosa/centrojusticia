    <%=javascript_include_tag "datetimepicker_es"%>

    <%= stylesheet_link_tag "login-box"%>
    <%= stylesheet_link_tag "oficial"%>
    <%= stylesheet_link_tag "bt"%>
    <%= stylesheet_link_tag "search"%>
    <%= stylesheet_link_tag "calendario"%>

    <title>Centro Estatal de Justicia Alternativa</title>

    <script type="text/javascript">
      window.onload=function(){enableTooltips()};
      // this allows jquery to be called along with scriptaculous and YUI without any conflicts
      // the only difference is all jquery functions should be called with $j instead of $
      // e.g. $j('#div_id').stuff instead of $('#div_id').stuff
      var $j = jQuery.noConflict();
    </script>
</head>

<body>
  <%=yield%>
  <script>
    Form.focusFirstElement(document.forms[0]);
  </script>
</body>
</html>
