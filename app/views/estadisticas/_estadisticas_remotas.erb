   <%end%>

 </p>

 
<h2 align="center"><%=@titulo%></h2>
<h3 align="center">Del per√≠odo del <%=@inicio.strftime('%d de %B de %Y')%> al <%=@fin.strftime('%d de %B de %Y')%></h3>


<!-- contenido -->
<div id="divlista">
    <table width="75%" border="1" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <%clase=0%>
      <!-- totales -->
       <tr class="d<%=h clase%>" align="center">
              <td style="vertical-align: middle;" colspan="2"><b> => Total de expedientes</b></td>
              <td style="vertical-align: middle;"><%=h @total_expedientes_generados%></td>
              <%clase=(clase==0)? 1 : 0%>
       </tr>

       <!-- totales -->
       <tr class="d<%=h clase%>" align="center">
              <td style="vertical-align: middle;" colspan="2"><b> => Total de personas morales</b></td>
              <td style="vertical-align: middle;"><%=h @personas_morales%></td>
              <%clase=(clase==0)? 1 : 0%>
       </tr>

       <!-- totales -->
       <tr class="d<%=h clase%>" align="center">
              <td style="vertical-align: middle;" colspan="2"><b> => Participantes hombres</b></td>
              <td style="vertical-align: middle;"><%=h @participantes_hombres%></td>
              <%clase=(clase==0)? 1 : 0%>
       </tr>

       <tr class="d<%=h clase%>" align="center">
              <td style="vertical-align: middle;" colspan="2"><b> => Participantes mujeres</b></td>
              <td style="vertical-align: middle;"><%=h @participantes_mujeres%></td>
              <%clase=(clase==0)? 1 : 0%>
       </tr>

      <!-- Especialistas -->
     <%clase=0%>
     <%@especialistas.each do |e|%>
        <tr class="d<%=h clase%>">
          <td style="vertical-align: middle;"><%=h e['nombre'].gsub("\"","")%></td>
          <td style="vertical-align: middle;"><%=h e['orientaciones']%></td>
        </tr>
         <%clase=(clase==0)? 1 : 0%>
     <%end%>

         <!-- ESTADISTICAS POR MATERIA -->
      <%if @total_materias > 0%>
        <tr style="background-color:gray; color:white">
          <th colspan="3">Materias</th>
        </tr>
        <%  clase=0%>
        <%@contador_materias.each do |nombre, valor|%>
              <%if valor > 0%>
                <tr class="d<%=h clase%>">
                    <td style="vertical-align: middle;" colspan="2" align="center"><%=nombre%></td>
                    <td style="vertical-align: middle;"><%=valor%> 
                      
                      <%#*(<%=  "%.2f" % ((valor / @total_materias.to_f) * 100)>)%>
                  </td>
                    <%clase=(clase==0)? 1 : 0%>
                </tr>
              <%end%>
       <%end%>
     <%end%>

      


    </table>
    <br /><br />
</div>
