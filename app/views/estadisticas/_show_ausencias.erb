<%= render :partial => "select_date_range_ausencias"%>

<div class="titulocalendario">
  <p>Del período del <%=@inicio.strftime('%d de %B de %Y')%> al <%=@fin.strftime('%d de %B de %Y')%></p>
</div>

<!-- contenido -->
<div id="divlista">
    <table width="85%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
    <tr style="background-color:gray; color:white">
       <td style="vertical-align: middle;">Trabajador</td>
       <td style="vertical-align: middle;">Situación</td>
       <td style="vertical-align: middle;">Inicio</td>
       <td style="vertical-align: middle;">Fin</td>
       <td style="vertical-align: middle;">&nbsp;</td>
    </tr>
    <%clase=0%>
    <%@movimientos.each do |m|%>
    <tr class="d<%=invert_class(clase)%>">  
      <td style="vertical-align: middle;"><%=h(User.find(m.user_id).nombre_completo)%></td>
      <td style="vertical-align: middle;"><%=h(m.situacion.descripcion)%></td>
      <td style="vertical-align: middle;"><%=h(m.fecha_inicio.strftime('%d de %B de %Y - %H:%M %p'))%></td>
      <td style="vertical-align: middle;"><%=h(m.fecha_fin.strftime('%d de %B de %Y - %H:%M %p'))%></td>
      <td style="vertical-align: middle;"><%=link_to image_tag('iconos/detalle.png', :size => "32x32", :mouseover => "iconos/detalle.png") , {:action => "#", :controller => "#"}, :title => "#{m.observaciones}"%></td
    </tr>
    <%clase = invert_class(clase)%>
    <%end%>
  </table>
</div>


