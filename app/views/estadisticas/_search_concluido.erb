<div class="titulocalendario">
  <p>
    ANALITICO DE CONCLUIDOS
  </p>
</div>

<%@action = "analitico_concluidos"%>
<%@title = "Seleccione el rango de fechas para generar estadística de concluidos"%>
<%=render :partial => "select_date_range", :action => "select_estadisticas_concluidos"%>

<div class="titulocalendario">
  <%if @inicio.strftime("%d de %B de %Y") == @fin.strftime("%d de %B de %Y")%>
      <p>
       <%=@inicio.strftime("%d de %B de %Y")%>
      </p>
  <%else%>
      <p>
        PERIODO COMPRENDIDO ENTRE EL <%=@inicio.strftime("%d de %B de %Y").upcase%> Y EL DÍA <%=@fin.strftime("%d de %B de %Y").upcase%>
      </p>
      <p> Total de concluidos: <%= @concluidos.total_entries %> </p>
  <%end%>
</div>



    <table class="tabla_dp" >
      <tr align="center">        
        <td align="center">
          <%=h (link_to "IMPRIMIR LIBRO", {:controller => "libro", :action => "imprimir", :fecha_inicio => @inicio, :fecha_fin => @fin}, :target => "_blank", :class => "fancybox fancybox.iframe boton") %>
        </td>        
      </tr>  
    </table>



<div id="divlista">
  <table width="99%" border="0" cellspacing="0" cellpadding="0" class="tablakolaval" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid; font-size: 11px;">
     <tr>
       <td style="vertical-align: middle; width: 5%;" align="center">Número de expediente</td>
       <td style="vertical-align: middle; width: 10%;" align="center">Fecha de conclusion</td>
       <td style="vertical-align: middle; width: 5%;" align="center">Materia</td>
       <td style="vertical-align: middle; width: 10%;" align="center">Mecanismo alternativo</td>
       <td style="vertical-align: middle; width: 14%;" align="center">Motivo de conclusión</td>
       <td style="vertical-align: middle; width: 14%;" align="center">Observaciones</td>
     </tr>
     
     <%for concluido in @concluidos%>      
      
        <!-- listado de todos los tramites -->
       
        
        <tr>
          <!-- numero de expediente -->
          <td style="vertical-align: middle;"><%= (concluido.tramite)? (link_to "#{concluido.tramite.numero_expediente}", {:controller => "tramites", :action => "show", :id => concluido.tramite}, :target => "_blank") : "--" %></td>
          <td style="vertical-align: middle;"><%=h concluido.created_at.strftime("%A %d DE %B de %Y - %H:%M %p")%></td>
          <td style="vertical-align: middle;"><%=h (concluido.tramite && concluido.tramite.materia)? concluido.tramite.materia.descripcion : '-'%></td>
          <td style="vertical-align: middle;"><%=h (concluido.tramite && concluido.tramite.mecanismo_alternativo)? concluido.tramite.mecanismo_alternativo.descripcion : '-'%></td>
          <td style="vertical-align: middle;"><%=h (concluido.motivo_conclusion)? concluido.motivo_conclusion.descripcion_completa : '-'%></td>
          <td style="vertical-align: middle;"><%=h (concluido.observaciones_conclusion)? concluido.observaciones_conclusion : '-'%></td>
        </tr>
        
     <%end%>
  </table>
</div>


<br />
<table>
    <tr align="center" >
      <td colspan="5" style="padding: 0;">
        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @concluidos %>
          </div>
          <%= will_paginate @concluidos, :params => { :fecha_inicio => @inicio, :fecha_fin => @fin  } %>
        </div>
      </td>
    </tr>
</table>


<%= link_to image_tag("botones/regresar_menu_ant.png", :border =>0) , :controller => "home"%><br />
