<div id="divlista">
    <table width="95%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
         <th style="vertical-align: middle;" align="center">Núm. visita</th>
          <th style="vertical-align: middle;" align="center">Visitador</th>
          <th style="vertical-align: middle;" align="center">Tipo de visita:</th>
          <th style="vertical-align: middle;" align="center">Fecha/Hora inicial</th>
          <th style="vertical-align: middle;" align="center"><%=h "Estatus actual"%></th>
          <th style="vertical-align: middle;" colspan="3" align="center">Acciones</th>
      </tr>
    <%clase=1%>

    <%@visitas.each do |e|%>
    <tr class="d<%=invert_class(clase)%>">
       <td style="vertical-align: middle;"><%=h (e.id) ? e.id : "----"%></td>
       <td style="vertical-align: middle;"><%=h (e.user_id)? e.user.nombre_completo : '---'%></td>
       <td style="vertical-align: middle;"><%=h (e.tipovisita_id)? e.tipovisita.descripcion : "---"%></td>
       <td style="vertical-align: middle;"><%=h (e.created_at) ? e.created_at.strftime('%d de %B de %Y - %H:%M:%S') : "---"%></td>
       <td style="vertical-align: middle;"><%=h (e.estatus_visita) ? e.estatus_visita.descripcion : "---"%></td>
       <%clase = invert_class(clase)%>

        <!-- Edicion -->
        <td style="vertical-align: middle;"><%=h (link_to "Revisar", {:controller => "visita", :action => "list_tramites", :id => e.id}, :class => 'boton') %></td>
        
        <!-- resumen general -->
        <td style="vertical-align: middle;"><%=link_to "Resumen", {:controller => "visita", :action => "resumen", :id => e.id}, :class => 'boton'  -%></td>

        <!-- CONCLUIR VISITA -->
        <% if e.estatus_visita.descripcion == "INICIADA" and current_user.has_role?(:visitadores) %>
          <td style="vertical-align: middle;"><%=h (link_to "FINALIZAR", {:controller => "visita", :action => "finalizar_visita", :id => e.id}, :class => 'boton', :confirm => "¿Está seguro/a que desea finalizar la visita?") %></td>  
        <%end%>

     </tr>
    <%end%>
  </table>
</div>

<br />

<table>
    <tr align="center" >
      <td colspan="5" style="padding: 0;">
        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @visitas %>
          </div>
          <%= will_paginate @visitas %>
        </div>
      </td>
    </tr>
</table>



