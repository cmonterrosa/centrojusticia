<div id="divlista">
   <table width="88%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:gray; color:white">
      <th colspan="2">
        DETALLE DEL CONVENIO
      </th>
     </tr>

    <tr class="d1">
      <td style="vertical-align: middle;"><b>Folio del convenio:</b></td>
      <td style="vertical-align: middle;"><%=h(@convenio.folio ? @convenio.folio : "No existe información")%></td>
    </tr>


    <tr class="d0">
      <td style="vertical-align: middle;"><b>Número de expediente:</b></td>
      <td style="vertical-align: middle;"><%=h(@convenio.tramite ? @convenio.tramite.numero_expediente : "No existe información")%></td>
    </tr>


    <tr class="d1">
       <td style="vertical-align: middle;"><b>Cantidad monetaria:</b></td>
       <td style="vertical-align: middle;"><%=h(@convenio.cantidad_monetaria ? @convenio.cantidad_monetaria : "No existe información")%></td>
    </tr>

    <tr class="d0">
       <td style="vertical-align: middle;"><b>Plazo:</b></td>
       <td style="vertical-align: middle;"><%=h(@convenio.plazo ? @convenio.plazo : "No existe información")%></td>
    </tr>

    <tr class="d1">
       <td style="vertical-align: middle;"><b>Tipo de acuerdo:</b></td>
       <td style="vertical-align: middle;"><%=h(@convenio.tipo_acuerdo ? @convenio.tipo_acuerdo : "No existe información")%></td>
    </tr>


    <tr class="d0">
      <td style="vertical-align: middle;"><b>Descripcion:</b></td>
      <td style="vertical-align: middle;"><%=h(@convenio.observaciones ? @convenio.observaciones : "No existe información")%></td>
    </tr>


    <tr class="d1">
      <td style="vertical-align: middle;"><b>Observaciones:</b></td>
      <td style="vertical-align: middle;"><%=h(@convenio.observaciones ? @convenio.observaciones : "No existe información")%></td>
    </tr>

    <tr class="d0">
       <td style="vertical-align: middle;"><b>Capturado por:</b></td>
       <td style="vertical-align: middle;"> <%=h(@convenio.especialista ? @convenio.especialista.nombre_completo : "No existe información")%></td>
    </tr>

    <tr class="d1">
      <td style="vertical-align: middle;"><b>Fecha/hora de captura:</b></td>
      <td style="vertical-align: middle;"><%=h(@convenio.created_at ? @convenio.created_at.strftime("%d de %B de %Y - %H:%M") : "No existe información")%></td>
    </tr>

    <%if @convenio.validado%>
      <tr class="d0">
        <td style="vertical-align: middle;"><b>CONVENIO VALIDADO</b></td>
        <td><%=h (image_tag("iconos/convenio_valido.png", :border =>0, :title => "Validado"))%></td>
      </tr>
      <tr class="d1">
        <td style="vertical-align: middle;"><b>Fecha/hora de validacion:</b></td>
        <td style="vertical-align: middle;"><%=h(@convenio.fechahora_validacion ? @convenio.fechahora_validacion.strftime("%d de %B de %Y - %H:%M") : "No existe información")%></td>
      </tr>
    <%end%>

   </table>

  <br />


 
    <%if @adjuntos%>
      <!-- detalle de adjuntos -->
      <table width="80%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
        <tr style="background-color:gray; color:white">
          <th colspan="3">
             ARCHIVOS ADJUNTOS
          </th>
        </tr>

        <tr class="d0">
          <td colspan="3">
            <table width="100%"  border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
              <tr>
                <th style="text-align: left;">Descripción:</th>
                <th style="text-align: left;">Cargado por:</th>
                <th style="text-align: left;">Fecha/hora:</th>
              </tr>
              <%@adjuntos.each do |a|%>
                <tr>
                  <td style="text-align: left;"><%=link_to a.descripcion, {:action => "download", :controller => "upload", :id => a}, :target => "_blank"%></td>
                  <td style="text-align: left;"><%=h (a.user) ? a.user.nombre_completo: ''%></td>
                  <td style="text-align: left;"><%=h (a.created_at) ? a.created_at.strftime('%d de %B de %Y - %H:%M'): ''%></td>
                </tr>
              <%end%>
            </table>
           </td>
        </tr>
       </table>
      
    <%end%>
</div>

<p>
  <%= link_to image_tag("botones/regresar_menu_ant.png", :border =>0) , :controller => "convenios", :action => "list_by_tramite", :id => @convenio.tramite%><br />
</p>