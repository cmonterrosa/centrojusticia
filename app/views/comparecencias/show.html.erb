			$j('.fancybox').fancybox();
               });
</script>


<div class="titulocalendario">
  <%if @comparecencia &&  @comparecencia.tramite.numero_expediente%>
    <p>COMPARECENCIA DE NÚMERO DE EXPEDIENTE: <b><%=h @comparecencia.tramite.numero_expediente%></b></p><br />
  <%else%>
    <p>COMPARECENCIA</p>
  <%end%>
</div>

<table width="50%" border="0" cellspacing="0" cellpadding="0">
  <tr align="center">
    
      <td>
          <%=link_to_remote image_tag("kolaval/ico-infogeneral.jpg", :size => "128x128", :alt => "Informacion", :title => "Informacion"), :update => "divcontenido",
          :url => { :action => "show_informacion_general", :id => @tramite.id },
          :before => "Element.show('spinner')",
          :complete => "Element.hide('spinner')",
          :html => {:title => "Más información"}%>
      </td>

      <%if @comparecencia%>
        <td>
           <%=link_to_remote image_tag("kolaval/ico-participantes.jpg", :size => "128x128", :alt => "Participantes", :title => "Participantes"), :update => "divcontenido",
            :url => { :action => "show_participantes", :id => @tramite.id },
            :before => "Element.show('spinner')",
            :complete => "Element.hide('spinner')",
            :html => {:title => "Participantes"}%>
        </td>

        <%if current_user.has_role?("lecturaagenda") && HABILITADO_RESERVA_SESION%>
         <td>
           <%=link_to image_tag('iconos/horarios2.png', :size => "128x128") , {:action => "show_schedules", :id => @comparecencia.tramite}, :title => "seleccion de horario", :class => "fancybox fancybox.iframe"%>
         </td>
        <%end%>
     <%end%>
 </tr>

