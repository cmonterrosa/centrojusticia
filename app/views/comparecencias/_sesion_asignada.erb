<!-- contenido -->
<div id="divlista">
    <table width="75%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">

     <!-- Por escrito -->
     <tr>
      <td><%=link_to image_tag('tipo_atencion/atencion_escrito.png',  :size => "128x128", :mouseover => "tipo_atencion/atencion_escrito_2.png") , {:action => "generar_pdf_reserva_sesion", :controller => "comparecencias", :id => @sesion}, :title => "Atención por escrito"%></td>
     </tr>

    <tr style="background-color:gray; color:white">
        <th colspan="3">
          Información
        </th>
    </tr>
    <tr class="d0">
       <td style="vertical-align: middle;" ><b>Tipo</b></td>
        <td style="vertical-align: middle;"><%=h (@sesion.tiposesion) ? @sesion.tiposesion.descripcion : "NO EXISTE INFORMACION"%></td>
    </tr>

    <tr class="d1">
       <td style="vertical-align: middle;"><b>Fecha</b></td>
       <td style="vertical-align: middle;"> <%=h (@sesion.fecha ) ? @sesion.fecha.strftime('%d de %B de %Y') : "NO EXISTE INFORMACION"%></td>
    </tr>

    <tr class="d0">
       <td style="vertical-align: middle;"><b>Hora</b></td>
       <td style="vertical-align: middle;"> <%=@sesion.hora_completa%></td>
    </tr>
  </table>
</div>