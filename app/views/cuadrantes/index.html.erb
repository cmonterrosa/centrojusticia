<h1>Cuadrantes</h1>


<table width="60%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
    <tr style="background-color:gray; color:white">
      <th width="50%">Descripción</th>
       <th width="50%">Total</th>
      <th colspan="4">Acciones</th>
    </tr>

<%clase=1%>
<% @cuadrantes.each do |cuadrante| %>
    <tr class="d<%=invert_class(clase)%>">
    <td width="50%"><%=h cuadrante.descripcion %></td>
    <td width="50%"><%=h Participante.count(:cuadrante_id, :conditions => ["cuadrante_id = ?", cuadrante.id]) %></td>
    <td style="vertical-align: middle;"><%=h (link_to "Mostrar", cuadrante, :class => 'boton') %></td>
    <td style="vertical-align: middle;"><%=h (link_to 'Editar', edit_cuadrante_path(cuadrante), :class => 'boton') %></td>
    <td style="vertical-align: middle;"><%=h (link_to 'Invitadores',{:action => "invitadores_by_cuadrante", :id => cuadrante.id}, :class => 'boton') %></td>
    <td style="vertical-align: middle;"><%=h (link_to 'Eliminar', cuadrante, :confirm => '¿Esta seguro que quiere eliminarlo?', :method => :delete, :class => 'boton' )%></td>
  </tr>
  <%clase = invert_class(clase)%>
<% end %>
</table>

<br />

