    <tr style="background-color:gray; color:white">
      <th width="50%">NOMBRE COMPLETO</th>
      <th width="20%">&nbsp;</th>
    </tr>

<%clase=1%>
<% @invitadores_cuadrante.each do |invitador| %>
    <tr class="d<%=invert_class(clase)%>">
