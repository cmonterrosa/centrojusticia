    <td style="vertical-align: middle;"><%=h (link_to 'Quitar', {:action => "quit_invitador", :cuadrante => @cuadrante, :id => invitador}, :confirm => 'Â¿Esta seguro que quiere quitarlo de ese cuadrante?', :method => :delete, :class => 'boton' )%></td>
  </tr>
  <%clase = invert_class(clase)%>
<% end %>
</table>

