		$j(document).ready(function() {
			/*
			 *  Simple image gallery. Uses default settings
			 */

			$j('.fancybox').fancybox();
               });
</script>

<div class="titulocalendario">
  <p>
    AGENDA DIARIA DE SESIONES
  </p>
  <p>
    <%=link_to "<", {:action => "daily_show", :day => @before.day, :month => @before.month, :year => @before.year, :origin => @origin, :type => @type}, :class => "flecha_calendario"-%>&nbsp;
      <%=day_of_the_week(@fecha.strftime("%u").to_i)%>, <%=(@fecha.strftime("%d de %B de %Y")).upcase%>&nbsp;
    <%=link_to ">", {:action => "daily_show", :day => @after.day, :month => @after.month, :year => @after.year, :origin => @origin, :type => @type}, :class => "flecha_calendario"-%>
  </p>
</div>


<img alt="spinner" id="spinner" src="/images/loading_spinner.gif" style="display:none;" />
<div id="calendario">

  <p>
   <%= link_to image_tag("kolaval/ico-actualizar.jpg", :border =>0) , {:action => "daily_show",          :day => @fecha.day, :month => @fecha.month, :year => @fecha.year, :origin => @origin, :type => @type}, :title => "Recargar"%>
   <%= link_to image_tag("kolaval/ico-print.jpg", :border =>0) , {:action => "daily_show_pdf.pdf", :day => @fecha.day, :month => @fecha.month, :year => @fecha.year, :origin => @origin, :type => @type}, :title => "Imprimir agenda del dia"%>
</p>

  <div class="ultima_conexion">
    Ultima actualización: <%=Time.now.strftime("%H:%M:%S")%>
  </div><br />

<!-- From monday to friday -->
  <%unless inhabil?(@fecha)%>
   <table class="table1" border=1 width=90% style='table-layout:fixed'>
      <thead>
          <tr>
              <th>HORA</th>
              <%@salas.each do |sala|%>
                <th scope="col" abbr="Starter"><%=sala.descripcion%></th>
              <%end%>
          </tr>
      </thead>

      <tbody>
      <!-- horarios -->
      <%@horarios.each do |horario|%>
      <tr>
          <th scope="row"><%=h (horario.hora_completa) ? (horario.hora_completa) : "--"%></th>
              <%@salas.each do |sala|%>

             <%if @type%>
                    <%sesion = Sesion.find(:first, :conditions => ["cancel is NULL AND fecha = ? AND hora = ? AND minutos = ? AND sala_id = ? AND (mediador_id = ? OR comediador_id = ?) ", @fecha, horario.hora, horario.minutos, sala.id, current_user.id, current_user.id])%>

              <%else%>
                      <%if current_user.has_role?("asignahorario")%>
                            <%sesion = Sesion.find(:first, :conditions => ["fecha = ? AND hora = ? AND minutos = ? AND sala_id = ? ", @fecha, horario.hora, horario.minutos, sala.id])%>
                      <%else%>
                            <%sesion = Sesion.find(:first, :conditions => ["cancel is NULL AND fecha = ? AND hora = ? AND minutos = ? AND sala_id = ? ", @fecha, horario.hora, horario.minutos, sala.id])%>
                      <%end%>
              <%end%>

                  <%if sesion%>
                    <%@backgrounds_colors = colors_to_days%>

                    <%estilo = !(sesion.cancel == nil)? "background-color: #F8FB53; text-decoration: line-through; color: white;" : "background-color:  #{@backgrounds_colors[sesion.tiposesion_id - 1]}"%>

                   <%if sesion.tiposesion_id%>
                      <td style="<%=h estilo%>">
                        
                       <!-- Mostramos observaciones si tiene -->
                       <%if current_user.has_role?("asignahorario")%>
                          <%=link_to sesion.resume_with_observaciones, {:action => 'show_window', :controller => 'sesiones', :id => sesion},  :title => "Detalle", :class => "fancybox fancybox.iframe"%>
                       <%else%>
                          <%=link_to sesion.resume, {:action => 'show_window', :controller => 'sesiones', :id => sesion},  :title => "Detalle", :class => "fancybox fancybox.iframe"%>
                       <%end%>

                       <!-- reprogramacion de sesion -->
                       <%if current_user.has_role?("asignahorario") || current_user.has_role?("subdireccion")%>
                          &nbsp;<%= link_to image_tag("kolaval/ico-calen-edicion.png", :border =>0, :size => "24x24") , {:controller => "sesiones", :action => "reprogramar", :id => sesion}, :title => "Reprogramar sesion", :confirm => '¿Esta seguro que quiere reprogramar la sesión?', :method => :post %>
                      <%end%>

                      </td>
                      
                   <%end%>
                  <%elsif h = Horario.find(:first, :conditions => ["hora = ? AND minutos = ? AND sala_id = ? AND activo=true", horario.hora, horario.minutos, sala.id])%>
                    <td style="background-color: #D7F2FF;">
                        <%=  link_to "Disponible", {:action => "new_with_date", :controller => "sesiones", :date => @fecha, :horario => h, :origin => @origin}, :title => 'Capturar nueva sesion'%>
                    </td>
                 <%else%>
                    <td></td>
                 <%end%>
              <%end%>
          </tr>
        <%end%>
      </tbody>
    </table>
<%end%>
</div>

<div id="error"></div>

<br /><br />
<%= link_to image_tag("botones/regresar_menu_ant.png", :border =>0) , :controller => @origin, :action => "management", :month => @fecha.strftime("%Y-%m")%><br />



