<table border="1" width="70%" style="background-color:white; text-align: center;">

   <tr style="background-color:gray; color:white">
    <th colspan="2">
      Datos del trámite
    </th>
   </tr>

    <tr>
    <th>Folio del trámite:</th>
    <td><%=h (@tramite) ? @tramite.folio_integrado : "---"%></td>
    </tr>

   
   <tr>
    <th><%=h "Estatus:"%></th>
    <td><%=h (@tramite) ? @tramite.estatus : "---"%></td>
  </tr>


  <tr style="background-color:gray; color:white">
    <th colspan="2">
      Datos de la sesión
    </th>
  </tr>
 
  <tr>
    <th><%=h "Tipo de sesión:"%></th>
    <td><%=h (@sesion.tiposesion) ? @sesion.tiposesion.descripcion : "---"%></td>
  </tr>

  <tr>
    <th>Fecha-hora:</th>
    <td><%=h((@sesion.start_at)? @sesion.start_at.strftime("%Y-%m-%d %H:%M:%S") : "Sin asignar")%></td>
  </tr>

  <tr>
    <th>Sala:</th>
    <td><%=h (@sesion.horario) ? @sesion.horario.sala.descripcion : "---"%></td>
  </tr>

  <tr>
    <th>Especialista:</th>
    <td><%=@sesion.mediador.nombre_completo%></td>
  </tr>

  <tr>
    <th>Comediador:</th>
    <td> <%=@sesion.comediador.nombre_completo%></td>
  </tr>
</table>


<p>
<h4>Para mayor información consulte:
  <%= url_for(:host => "#{SITE_URL}", :controller => "sesiones", :action => "show", :id => @sesion) %>
</h4>
</p>



