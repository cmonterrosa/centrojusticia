<!-- contenido -->
<div id="divlista">
    <table width="95%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
          <th style="vertical-align: middle;" align="center">Participante</th>
          <th style="vertical-align: middle;" align="center">Manifesto</th>
          <th style="vertical-align: middle;" align="center">Fecha/hora llamada</th>
          <th style="vertical-align: middle;" align="center">Realiz√≥</th>
          <th style="vertical-align: middle;" colspan="3" align="center">Acciones</th>
      </tr>
    <%clase=1%>


    <%@seguimientos.each do |s|%>
    <tr class="d<%=invert_class(clase)%>">
       <td style="vertical-align: middle;"><%=h (s.participante) ? s.participante.nombre_completo : "----"%></td>
       <td style="vertical-align: middle;"><%=h (s.manifestacion_seguimiento_id) ? s.manifestacion_seguimiento.descripcion : "----"%></td>
       <td style="vertical-align: middle;"><%=h (s.fechahora) ? s.fechahora.strftime('%d de %B de %Y - %H:%M:%S') : "---"%></td>
       <td style="vertical-align: middle;"><%=h (s.user_id)? s.user.nombre_completo : ''%></td>
       <%clase = invert_class(clase)%>
        <!-- Edicion -->
          <td style="vertical-align: middle;"><%=h (link_to "Editar", {:controller => "seguimientos", :action => "new_or_edit", :id => s.id, :c => @convenio}, :class => 'boton') %></td>
        <!-- eliminacion de convenio -->
         <td style="vertical-align: middle;"><%=link_to "Eliminar", {:controller => "seguimientos", :action => "destroy", :id => s.id, :c => @convenio}, :class => 'boton'  -%></td> 
    </tr>
    <%end%>
  </table>
</div>

<br />


<% if !@seguimientos.empty? && (@seguimientos.total_entries > @seguimientos.per_page.to_i) %>
<table>
    <tr align="center" >
      <td colspan="5" style="padding: 0;">
        <div class="digg_pagination">
          <div class="page_info">
            <%= page_entries_info @seguimientos %>
          </div>
          <%= will_paginate @seguimientos, :params => { :fecha_inicio => @inicio, :fecha_fin => @fin } %>
        </div>
      </td>
    </tr>
</table>
<%end%>