<% form_for :participante, @participante, :url => { :action => "save", :id => @comparecencia, :participante_id => @participante.id, :invitacion => @invitacion, :sesion => @sesion }, :html => {:id => "new_participante", :onsubmit => "return checkSubmit();"} do |f| -%>
    <table class="sample" style="width: 90%; margin: auto;">
    <tr class="titulo">
      <td colspan="5" style="text-align: center; background: white;">
        <span style="font-size: 16px; color: black;">CAPTURA&nbsp;DE&nbsp;PERSONA&nbsp;MORAL&nbsp;</span>
      </td>
    </tr>

    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4">DATOS DE PROCEDENCIA</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center"></td>
          <td align="center">Rol <em class="formee-req">*</em></td>
          <td align="center">Razón Social <em class="formee-req">*</em></td>
          <td align="center">A través de:</td>
        </tr>
        <tr>
          <td align="center"><%= f.hidden_field :tipopersona_id, :value => @tipo_persona.id%></td>
          <td align="center"><%= f.select(:perfil, ["INVOLUCRADO", "SOLICITANTE"], :prompt => 'Seleccione una opción', :required => true)%></td>
          <td align="center"><%= f.text_field :razon_social, :onKeyPress => "return CharNum(event, 'letra');", :onBlur=>"javascript:{this.value = this.value.toUpperCase();};verificar_rol();",   :placeholder => "Es necesario capturarlo", :required => true, :size => 65%></td>
          <td align="center"><%= f.text_field :apoderado_legal, :onBlur=>"javascript:{this.value = this.value.toUpperCase(); }", :onKeyPress => "return CharNum(event, 'letra');",  :placeholder => "Solo capturar si existe", :size => 65%></td>
        </tr>
      </table></td>
    </tr>


  
    <!-- segunda barra inferior -->
    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
          <tr bgcolor="#E8E8E8" class="subtitulo">
            <td align="center" colspan="4" >DATOS DE PROCEDENCIA</td>
          </tr>
          <tr align=" justify" class="pregunta">
            <td>&nbsp;</td>
            <td align="center">País</td>
            <td align="center">Estado / Municipio</td>
          </tr>
          <tr>
             <!-- pais -->
             <%default_pais = Pais.find(:first, :conditions => ["id = ?", @participante.pais_id])%>
             <%default_pais ||=Pais.find(:first, :conditions => ["clave = ? ", 'MX'])%>
              <td align="center">
                <%= f.check_box(:sabe_procedencia, {:onclick => "ena_originario(this, 'participante_pais_id', 'participante_municipio_id');" }, "NO", "SI") %>&nbsp;NO  SABE O NO RESPONDIO
              </td>
             <td align="center"><%= f.select :pais_id, Pais.find(:all, :order => "descripcion").collect{|a| [a.descripcion, a.id]}, {:selected =>default_pais.id}, {:onchange => "showHideListadoDeEstados('participante_pais_id', 'estados_municipios', 'participante_municipio_id', 156);"}%></td>
             
             <!-- Estado/Municipio -->
             <div id="estados_municipios">
                <%estado_default = Estado.find_by_descripcion("CHIAPAS")%>
                <%default = Municipio.find(:first, :conditions => ["id = ?", @participante.municipio_id])%>
                <%default ||= Municipio.find(:first, :conditions => ["estado_id = ? and descripcion like ?", estado_default.id, "%#{LUGAR}%"])%>
                <td align="center"><%= f.select :municipio_id, Municipio.find(:all).collect{|a| [a.descripcion_jerarquica, a.id]}, :prompt => 'Seleccione una opción', :selected =>default.id%></td>
             </div>
          </tr>
      </table>
      </td>
    </tr>

    <!-- segunda barra inferior segunda seccion -->
    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
          <tr bgcolor="#E8E8E8" class="subtitulo">
            <td align="center" colspan="4" >DATOS DE UBICACIÓN</td>
          </tr>
          <tr align=" justify" class="pregunta">
            <td align="center">Domicilio <em class="formee-req">*</em></td>
            <td align="center">Referencias Domiciliarias</td>
            <td align="center">Cuadrante</td>
          </tr>
          <tr>
            <td align="center"><%= f.text_area :domicilio, :size => "40x10", :required => true, :onBlur=>"javascript:{this.value = this.value.toUpperCase(); }", :onchange => "verificar_rol();"%></td>
            <td align="center"><%= f.text_area :referencia_domiciliaria, :onBlur=>"javascript:{this.value = this.value.toUpperCase(); }",  :size => "40x11"%></td>
            <td align="center"><%= f.select :cuadrante_id, Cuadrante.find(:all).collect{|a| [a.descripcion, a.id]}, :prompt => 'Seleccione una opción'%></td>
          </tr>
      </table>
      </td>
    </tr>




    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4" >DATOS DE LOCALIZACION</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Teléfono Particular</td>
          <td align="center">Teléfono Celular</td>
          <td align="center">Teléfono Celular Adicional</td>
          <td align="center">Correo Electrónico</td>
        </tr>
        <tr>
          <td align="center"><%= f.text_field :telefono_particular,  :onKeyPress => "return CharNum(event, 'numero');", :size => 20%></td>
          <td align="center"><%= f.text_field :telefono_celular,  :onKeyPress => "return CharNum(event, 'numero');", :size => 20%></td>
          <td align="center"><%= f.text_field :telefono_celular_aux,  :onKeyPress => "return CharNum(event, 'numero');", :size => 20, :placeholder => "Capturar solo si existe"%></td>
          <td align="center"><%= f.text_field :correo%></td>
        </tr>
      </table>
      </td>
    </tr>

    <!-- Observaciones -->
    <tr align="center">
      <td align="center">
        <table width="100%" border="0" cellpadding="2" cellspacing="1" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid;">
        <tr bgcolor="#E8E8E8" class="subtitulo">
          <td align="center" colspan="4" >DATOS ADICIONALES</td>
        </tr>
        <tr align=" justify" class="pregunta">
          <td align="center">Observaciones y/o documentos que exhibe</td>
        </tr>
        <tr>
            <td align="center"><%= f.text_area :observaciones, :size => "100x5"%></td>
        </tr>
      </table>
      </td>
    </tr>


    
    <!-- FOOTER -->
    <tr>
      <td align="right">
        <table>
          <tr>
            <td>
              <input title="guardar y regresar" alt=" Guardar y regresar a la sección anterior " type="image"  src="/images/botones/btn_guardar.png" width="150" height="40" style="margin-left:90px;" onClick="return verificar_rol();"/>
            </td>
            <td>
              <%= link_to image_tag("botones/btn_regresar.png", :width => 170, :height=>"40", :border =>0, :style => "margin-left:90px;" ) ,  :controller => "comparecencias", :action => "new_or_edit", :id => @comparecencia.tramite-%>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>


<script type="text/javascript">
  var razon_social = new LiveValidation( 'participante_razon_social' );
  razon_social.add( Validate.Length, { maximum: 160 } );

  var apoderado_legal = new LiveValidation( 'participante_apoderado_legal' );
  apoderado_legal.add( Validate.Length, { maximum: 100 } );

  var domicilio = new LiveValidation( 'participante_domicilio' );
  domicilio.add( Validate.Presence );
  domicilio.add( Validate.Length, { maximum: 255 } );

  var referencia = new LiveValidation( 'participante_referencia_domiciliaria' );
  referencia.add( Validate.Length, { maximum: 300 } );

  var observaciones = new LiveValidation( 'participante_observaciones' );
  observaciones.add( Validate.Length, { maximum: 350 } );
</script>

