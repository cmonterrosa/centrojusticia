  <!-- Detalle de sesion -->
  <table width="60%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:gray; color:white">
      <th colspan="2">
        Detalle de sesión
      </th>
     </tr>
     <tr class="d0">
        <td style="vertical-align: middle;"><b>Descripción</b></td>
        <td style="vertical-align: middle;"><%=@sesion.descripcion%></td>
     </tr>

     <%if @sesion.start_at%>
     <tr class="d1">
        <td style="vertical-align: middle;"><b>Hora de inicio</b></td>
        <td style="vertical-align: middle;"><%=@sesion.start_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
     </tr>
     <%end%>

     <%if @sesion.mediador%>
     <tr class="d0">
        <td style="vertical-align: middle;"><b>Mediador</b></td>
        <td style="vertical-align: middle;"><%=@sesion.mediador.nombre_completo%></td>
     </tr>
     <%end%>

     <%if @sesion.comediador%>
     <tr class="d1">
        <td style="vertical-align: middle;"><b>Comediador</b></td>
        <td style="vertical-align: middle;"><%=@sesion.comediador.nombre_completo%></td>
     </tr>
     <%end%>

   </table><br />