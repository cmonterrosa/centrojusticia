<%=render :partial => "encabezado_info_sesion"%>


<% form_tag({:action => 'show_schedules', :fecha => @fecha, :sesion => @sesion, :mediador => @mediador, :comediador => @comediador, :sesion_num_invitacion => @sesion_num_invitacion, :sesion_tiposesion_id => @tiposesion_id}, :multipart => true, :remote => true ) do -%>
 <table class="table1" >
  <tr align="center">
    <th align="center">Num invitiación</th>
    <th align="center">Fecha</th>    
    <th align="center">Tipo de sesión</th>
  </tr>
 <tr align="center">
   <!-- <td><%=h @sesion.num_invitacion %></td> -->

   <td> <%= select_tag 'sesion_num_invitacion', options_for_select(@invitaciones.collect {|p| [ p['descripcion'], p['num_invitacion'] ]}, @sesion.num_invitacion)%> </td>
       <%(@fecha = (@sesion.start_at)? @sesion.start_at.strftime("%Y/%m/%d") : nil)%>
    <td><%= text_field_tag "sesion_fecha", @fecha%></td>    
    <td><%= select_tag 'sesion_tiposesion_id', options_from_collection_for_select(Tiposesion.all, 'id', 'descripcion', @sesion.tiposesion_id)%></td>
    <!-- <td><%=h (@sesion.tiposesion) ? (@sesion.tiposesion.descripcion) : @tiposesion.descripcion%></td> -->
 </tr>

 <tr align="center">
   <th align="center">Especialista</th>
   <th>Comediador</th>
   <th></th>
 </tr>
 <tr align="center">
    <td><%= select_tag 'sesion_mediador_id', options_from_collection_for_select(@especialistas, 'id', 'nombre_completo', @mediador.id)%></td>
    <td><%= select_tag 'sesion_comediador_id', options_from_collection_for_select(@especialistas, 'id', 'nombre_completo', @comediador.id)%></td>
    <td><%= submit_tag "Buscar horarios", :onclick => "enable_especialistas();"%></td>
 </tr>
  </table>
<% end %>
<br />


