<!-- layout de ficha -->
<table class="tablakolaval" width="85%" border="0" cellspacing="2" cellpadding="0" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
                <tr align="center">
                  <td width="20%" >NÚMERO DE EXPEDIENTE</td>
                  <td width="40%" >SOLICITANTE</td>
                  <td width="30%" >PRÓXIMA FECHA / TIPO DE SESIÓN</td>
                  <td width="10%" >MATERIA</td>
                </tr>
                <!-- Registros -->
                <tr align="center">
                  <td>
                      <%numero_expediente = (@tramite.numero_expediente) ? @tramite.numero_expediente : '---'%>
                      <%=link_to "#{numero_expediente}", {:action => "show", :id => @tramite}, :target => "_blank"%>
                  </td>
                  <td><%=h(@tramite.orientacion ? @tramite.orientacion.solicitante : "---")%></td>

                  <!-- Si tiene fecha reservada -->
                  <%if @sesion = Sesion.find_by_tramite_id(@tramite)%>
                    <%if @sesion.start_at%>
                      <td bgcolor="#f3f3f3">
                                <%=@sesion.start_at.strftime('%d de %B de %Y')%> (<%=@sesion.hora_completa%>) <br /> <%=@sesion.tiposesion.descripcion%> &nbsp;
                                <%if current_user.has_role?(:subdireccion) || current_user.has_role?(:controlagenda)%>
                                      <%=link_to "Eliminar reservacion", :action => "destroy_reserva", :controller => "sesiones", :id =>  @sesion, :tramite => @tramite, :new_st => @new_st%> </td>
                                 <%end%>
                    <%else%>
                        <td>&nbsp;</td>
                    <%end%>
                  <%else%>
                    <td>&nbsp;</td>
                  <%end%>

                  <td>
                    <div id="materia"><%=h(@tramite.materia ? @tramite.materia.descripcion : "No asignada")%></div>
                  </td>
                </tr>

                <!-- Descripcion del asunto -->
                <%@comparecencia = @tramite.comparecencia%>
                  <%if @comparecencia%>
                        <tr>
                           <td style="text-align: center;" colspan="4">
                              <b>ASUNTO</b>
                          </td>
                        </tr>

                        <tr>
                            <td colspan="4" align="justify">
                              <%=h @comparecencia.asunto%>
                            </td>
                        </tr>
                  <%end%>
  </table>
<br /><br />
