<h3 style="color:#104E8B; font-family: Helvetica;">Trámites</h3>

<table width="70%" border="0" cellspacing="0" cellpadding="0">
    <tr align="center">
        <!-- Tramite normal -->
        <td>
            <a href="/orientacions/new_or_edit" title="Iniciar trámite">
              <img src="/images/iconos/new_orientacion.png" width="128" height="128" alt="nueva orientación" />
            </a>
        </td>

        <!-- Atencion extraordinaria -->
        <%if current_user.has_role?("admin") || current_user.has_role?("direccion") || current_user.has_role?("admindireccion")%>
          <td>
              <a href="/extraordinaria" title="Iniciar atención extraordinaria">
                <img src="/images/iconos/new_orientacion_extra.png" width="128" height="128" alt="nueva orientación con personal extraordinario" />
              </a>
          </td>
        <%end%>

        <!-- Atención convenios -->
        <%if Time.now.hour > 15%>
          <div id="menu_especial">
              <td>
                <a href="/orientacions/new_or_edit/?t=extra" title="Iniciar trámite personal extraordinario">
                  <img src="/images/iconos/nueva_orientacion_personal_extraordinario.png" width="128" height="128" alt="nueva orientación con personal extraordinario" />
                </a>
              </td>
          </div>
        <%end%>

      <!-- Listado de trámites -->
        <td>
            <a href="/tramites/list" title="Trámites">
              <img src="/images/iconos/seguimiento.png" width="128" height="128" alt="Trámites" />
            </a>
        </td>
  </tr>

  <!-- TITULOS -->
  <tr align="center">
    <td class="menu">Iniciar trámite</td>

    <%if current_user.has_role?("admin") || current_user.has_role?("direccion") || current_user.has_role?("admindireccion")%>
        <td class="menu">Atenciones extraordinarias</td>
    <%end%>

     <%if Time.now.hour > 15%>
        <td class="menu">Iniciar trámite con personal extraordinario</td>
     <%end%>
    
    <td class="menu">Listado de trámites</td>
  </tr>
</table>
<br/>
