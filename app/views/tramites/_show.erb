          </tr>
        <%end%>

        <%if @tramite.materia%>
            <tr class="d1">
              <td style="vertical-align: middle;"><b>Materia:</b></td>
              <td style="vertical-align: middle;"><%=h  @tramite.materia.descripcion%></td>
            </tr>
        

