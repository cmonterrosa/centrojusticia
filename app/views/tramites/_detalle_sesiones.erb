<!-- Historial de sesiones-->
<%@sesiones_activas = Sesion.find(:all, :conditions => ["tramite_id = ? AND (cancel is NULL OR cancel=0)", @tramite.id], :order => "created_at")%>
<%unless @sesiones_activas.empty?%>
    <table width="90%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
        <th colspan="8">
          DETALLE DE SESIONES
        </th>
      </tr>
      <tr class="d0">
          <th style="vertical-align: middle;"><b>&nbsp;</b></th>
          <th style="vertical-align: middle;"><b>FOLIO</b></th>
          <th style="vertical-align: middle;"><b>DESCRIPCION</b></th>
          <th style="vertical-align: middle;"><b>NUM. INVI</b></th>
          <th style="vertical-align: middle;"><b>FECHA/HORA INICIO</b></th>
          <th style="vertical-align: middle;"><b>ESPECIALISTA</b></th>
          <th style="vertical-align: middle;"><b>COMEDIADOR</b></th>
          <th style="vertical-align: middle;"><b>RESULTADO</b></th>
          <%if current_user.has_role?("invitador") || current_user.has_role?("jefeatencionpublico") || current_user.has_role?("admindireccion") || current_user.has_role?("subdireccion")%>
          <th style="vertical-align: middle;"><b>&nbsp;</b></th>
          <%end%>
      </tr>
      <%@sesiones_activas.each do |row|%>
        <tr class="d1">

          <!-- reprogramacion de sesion -->
          <%if current_user.has_role?("asignahorario") || current_user.has_role?("subdireccion")%>
            <td><%= link_to image_tag("kolaval/ico-calen-edicion.png", :border =>0, :size => "16x16") , {:controller => "sesiones", :action => "asignar_horario", :id => row, :mediador_id => row.mediador_id, :comediador_id => row.comediador_id, :token => "show"}, :title => "Reprogramar sesion", :confirm => '¿Esta seguro que quiere reprogramar la sesión?', :method => :post -%></td>          
          <%else%>
            <td> - </td>
          <%end%>

          <td style="vertical-align: middle;"><%=h (row.clave) ? (link_to "#{row.clave}", {:controller => "sesiones", :action => "show_window", :id => row}, :class => "fancybox fancybox.iframe") : "---"%></td>
          <td style="vertical-align: middle;"><%=h(row.tiposesion_id ? row.tiposesion.descripcion : "---")%></td>
          <td style="vertical-align: middle;"><%=h(row.num_invitacion ? row.num_invitacion : "--")%></td>
          <td style="vertical-align: middle;"><%=h(row.start_at ? row.start_at.strftime("%d de %B de %Y - %H:%M %p") : "---")%></td>
          <td style="vertical-align: middle;"><%=h(row.mediador ? row.mediador.nombre_completo : "---")%></td>
          <td style="vertical-align: middle;"><%=h(row.comediador ? row.comediador.nombre_completo : "---")%></td>

          <td style="vertical-align: middle;"><%=h(row.resultado ? row.resultado : "NO EXISTE INFORMACIÓN")%></td>
        
           <%if current_user.has_role?("invitador") || current_user.has_role?("jefeatencionpublico") || current_user.has_role?("admindireccion") || current_user.has_role?("subdireccion")%>
              <td style="vertical-align: middle;"><%=link_to "INVITACIONES", {:controller => "invitaciones", :action => "list_by_sesion", :id => row}, :class => "boton" -%></td>
          <%end%>

        </tr>
     <%end%>
  </table><br /><br />
  <%end%>
