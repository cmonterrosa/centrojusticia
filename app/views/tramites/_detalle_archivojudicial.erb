<!-- Historial de sesiones-->
<%@archivosjudiciales = Archivojudicial.find(:all, :conditions => ["tramite_id = ?", @tramite.id], :order => "created_at")%>
<%unless @archivosjudiciales.empty?%>
    <table width="90%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
        <th colspan="3">
          DETALLE DEL ENVÍO AL ARCHIVO JUDICIAL
        </th>
      </tr>
      <tr class="d0">
          <td style="vertical-align: middle;"><b>Capturado por:</b></td>
          <td style="vertical-align: middle;"><b>Número de oficio:</b></td>
          <td style="vertical-align: middle;"><b>Fecha de envío</b></td>
      </tr>
      <%@archivosjudiciales.each do |row|%>
        <tr class="d1">
          <td style="vertical-align: middle;"><%=h (row.user_id) ? row.user.nombre_completo : "----"%></td>
          <td style="vertical-align: middle;"><%=h (row.numero_oficio) ? row.numero_oficio : "---"%></td>
          <td style="vertical-align: middle;"><%=h(row.fecha ? row.fecha.strftime("%d de %B de %Y") : "---")%></td>
        </tr>
     <%end%>
  </table><br /><br />
  <%end%>
