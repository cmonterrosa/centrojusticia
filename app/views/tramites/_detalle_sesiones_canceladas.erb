<!-- Historial de sesiones-->
<%@sesiones_noactivas = Sesion.find(:all, :conditions => ["tramite_id = ? AND (cancel=1)", @tramite.id], :order => "created_at")%>
<%unless@sesiones_noactivas.empty?%>
    <table width="80%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
      <tr style="background-color:gray; color:white">
        <th colspan="7">
          Detalle de sesiones canceladas o no llevadas a cabo
        </th>
      </tr>
      <tr class="d0">
          <td style="vertical-align: middle;"><b>Id</b></td>
          <td style="vertical-align: middle;"><b>Cancelada por:</b></td>
          <td style="vertical-align: middle;"><b>Descripción</b></td>
          <td style="vertical-align: middle;"><b>Num Invitación</b></td>
          <td style="vertical-align: middle;"><b>Fecha/hora inicio</b></td>
          <td style="vertical-align: middle;"><b>Especialista</b></td>
          <td style="vertical-align: middle;"><b>Comediador</b></td>
      </tr>
      <%@sesiones_noactivas.each do |row|%>
        <tr class="d1">
          <td style="vertical-align: middle;"><%=h (row.clave) ? (link_to "#{row.clave}", {:controller => "sesiones", :action => "show_window", :id => row}, :class => "fancybox fancybox.iframe") : "---"%></td>
          <td style="vertical-align: middle;"><%=h (row.cancel_user) ? User.find(row.cancel_user).nombre_completo : "---"%></td>
          <td style="vertical-align: middle;"><%=h(row.tiposesion_id ? row.tiposesion.descripcion : "---")%></td>
          <td style="vertical-align: middle;"><%=h(row.num_invitacion ? row.num_invitacion : "--")%></td>
          <td style="vertical-align: middle;"><%=h(row.start_at ? row.start_at.strftime("%d de %B de %Y - %H:%M %p") : "---")%></td>
          <td style="vertical-align: middle;"><%=h(row.mediador ? row.mediador.nombre_completo : "---")%></td>
          <td style="vertical-align: middle;"><%=h(row.comediador ? row.comediador.nombre_completo : "---")%></td>
        </tr>
     <%end%>
  </table><br /><br />
  <%end%>