<!-- Historial de estatus del tramite -->
  <!-- Historial de estados-->
  <table width="90%" border="0" cellspacing="0" cellpadding="0" class="sample" style="BORDER-RIGHT: #cccccc 1px solid; BORDER-TOP: #cccccc 1px solid; BORDER-LEFT: #cccccc 1px solid; BORDER-BOTTOM: #cccccc 1px solid">
     <tr style="background-color:gray; color:white">
      <th colspan="3">
        HISTORIAL DE ACTIVIDAD
      </th>
     </tr>
     <tr class="d0">
        <th style="vertical-align: middle;" width="26%"><b>DESCRIPCIÓN</b></th>
        <th style="vertical-align: middle;" width="26%"><b>FECHA/HORA</b></th>
        <th style="vertical-align: middle;" width="48%"><b>MODIFICÓ</b></th>
     </tr>
     <%Historia.find(:all, :conditions => ["tramite_id = ?", @tramite.id], :order => "created_at").each do |row|%>
       <tr class="d1">
         <td style="vertical-align: middle;" width="25%"><%=row.estatu.descripcion%></td>
         <td style="vertical-align: middle;" width="25%"><%=row.created_at.strftime("%d de %B de %Y    /   %H:%M:%S  %p")%></td>
         <td style="vertical-align: middle; font-weight: bold; text-transform: uppercase;" width="50%"><%=(row.user) ? User.find(row.user).nombre_completo : "---"%></td>

     </tr>
     <%end%>
  </table><br />